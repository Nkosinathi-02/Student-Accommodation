@model IEnumerable<WebApplication20.Models.StudentBooking>

@{
    ViewData["Title"] = "Student Bookings";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Book Now</a>
    </p>

    <table>
        <thead>
            <tr>
                
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Gender</th>
                <th>Room Type</th>
                <th>Booking Start Date</th>
                <th>Booking End Date</th>
                <th>Room Number</th>
                <th>Emergency Contact</th>
                <th></th>
                <th></th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Surname)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.gender)</td>
                    <td>@Html.DisplayFor(modelItem => item.roomType)</td>
                    <td>@Html.DisplayFor(modelItem => item.BookingStartDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.BookingEndDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.RoomNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmergencyContact)</td>
                    @* <td >
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        
                        
                    </td> *@
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    </td>
                    <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Cancel</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
